{
  "constants":
  {
    "IMAGE_DIR":"{DALI_IMAGE_DIR}",
    "DISPLAY_HEIGHT": 1080,
    "USER_CUSTOM_MENU_ARROW_WIDTH": 30,
    "USER_CUSTOM_MENU_ARROW_SIZE": [30, 1080, 1],
    "DEFAULT_MENU_USER_SIZE":[270,215,1],
    "DEFAULT_MENU_LIST_SIZE":[270,865,1],
    "DEFAULT_MENU_ITEM_SIZE":[270,150,1]
  },
  "templates":
  {
    "user-custom-menu-arrow":
    {
      "name":"background",
      "type":"ImageActor",     // "ImageActor, basic-style"
      "styles": ["basic-style"],
      "parent-origin":"TOP_LEFT",
      "anchor-point":"TOP_LEFT",
      "size": "{USER_CUSTOM_MENU_ARROW_WIDTH}",
      "color-mode":"USE_OWN_COLOR",
      "color":[0.0784,0.0784,0.082,0.75],
      "actors":
      [
        {
          "name":"arrow",
          "type":"ImageActor",
          "parent-origin":"CENTER",
          "anchor-point":"CENTER",
          "color-mode":"USE_OWN_COLOR",
          "image":{ "filename":"{IMAGE_DIR}staricon.png" }
        }
      ]
    },
    "homebar-menu-item":
    {
      "name":"root",
      "type":"Actor",
      "parent-origin":"TOP_CENTER",
      "anchor-point":"TOP_CENTER",
      "size":"{DEFAULT_MENU_ITEM_SIZE}",
      "color-mode":"USE_OWN_COLOR",
      "actors":
      [
        {
          "name":"background",
          "type":"ImageActor",
          "parent-origin":"CENTER",
          "anchor-point":"CENTER",
          "size":"{DEFAULT_MENU_ITEM_SIZE}",
          "color-mode":"USE_OWN_COLOR"
        },
        {
          "name":"icon",
          "type":"ImageActor",
          "parent-origin":"TOP_LEFT",
          "anchor-point":"TOP_LEFT",
          "position":[99,26,0],
          "size":[72,72,1]
        },
        {
          "type":"Actor",
          "parent-origin":"BOTTOM_LEFT",
          "anchor-point":"BOTTOM_LEFT",
          "position":[20,8,0],
          "size":[230,44,1],
          "actors":
          [
            {
              "name":"label",
              "type":"TextView",
              "parent-origin":"CENTER",
              "anchor-point":"CENTER",
              "markup-enabled":true
            }
          ]
        }
      ]
    }
  },
  "styles":
  {
    "live-tv-normal":
    {
      "actors":
      {
        "background":
        {
          "color-alpha":"1"
        },
        "icon":
        {
          "color":[ 0.27, 0.56, 1, 1 ],
          "image":{ "filename":"{IMAGE_DIR}icon_play_small.png" }
        },
        "label":
        {
          "color-alpha":"1",
          "text":"<font size='21' weight='medium'>LIVE TV</font>"
        }
      }
    },
    "live-tv-focus":
    {
      "actors":
      {
        "background":
        {
          "color-alpha":"1"
        },
        "icon":
        {
          "color":[1,1,1,1],
          "image":{ "filename":"{IMAGE_DIR}icon_play.png" }
        },
        "label":
        {
          "color-alpha":"1",
          "text":"<font size='25' weight='bold'>LIVE TV</font>"
        }
      }
    },
    "live-tv-highlight":
    {
      "actors":
      {
        "background":
        {
          "color-alpha":"0.4"
        },
        "icon":
        {
          "color":[1,1,1,1],
          "image":{ "filename":"{IMAGE_DIR}/icon_play.png" }
        },
        "label":
        {
          "color-alpha":"1",
          "text":"<font size='25' weight='medium'><b>LIVE TV</b></font>"
        }
      }
    },
    "live-tv-dim":
    {
      "actors":
      {
        "background":
        {
          "color-alpha":"0"
        },
        "icon":
        {
          "color":[ 0.27, 0.56, 1, 0.2 ],
          "image":{ "filename":"{IMAGE_DIR}/icon_play.png" }
        },
        "label":
        {
          "color-alpha":"0.2",
          "text":"<font size='21' weight='medium'>LIVE TV</font>"
        }
      }
    }
  },
  "stage":
  [
    {
      "type": "homebar-menu-item",
      "styles": ["live-tv-dim"]
    },
    {
      "type": "homebar-menu-item",
      "styles": ["live-tv-highlight"],
      "position":[0,200,0]
    },
    {
      "type": "homebar-menu-item",
      "styles": ["live-tv-focus"],
      "position":[0,400,0]
    },
    {
      "type": "homebar-menu-item",
      "styles": ["live-tv-normal"],
      "position":[0,600,0]
    }
  ]
}
